<section>
    <div class="gamingMain bg-blue">
        <div class="container">
            <h1 class="text-center display-1 text-white pb-10 pt-10">Games I have played.</h1>
            <div class="row text-white justify-content-center py-5">

                <% for(let i=0;i<data.gaming.length;i++) {%>
                    <div class="col-md-3 Card-Body my-5 mx-5" data-aos="fade-up" data-bs-toggle="modal" data-bs-target="#<%= data.gaming[i].name.split(" ").join("") %>" >
                        <div class="Card-Image-Div">
                            <img alt="Try Reloading" class="Card-Image mx-auto" src="<%= data.gaming[i].image %>">
                        </div>
                        <h3 class="display-5"><%= data.gaming[i].name %></h3>
                    </div>
                    <%- include("gameModal",{
                        id:data.gaming[i].name.split(" ").join(""),
                        image:data.gaming[i].image,
                        name:data.gaming[i].name,
                        rating:data.gaming[i].rating,
                        des:data.gaming[i].description}) %>
                <% } %>
            </div>
        </div>
    </div>
</section>