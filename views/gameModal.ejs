<div class="modal fade p-0" id="<%= id %>">
    <div class="modal-dialog modal-dialog-centered modal-xl modal-dialog-custom">
        <div class="modal-content bg-dark modal-custom mx-auto h-100">

            <div class="modal-title text-center p-2">
                <%= name %>
            </div>

            <div class="modal-body p-2 text-center">
                <a href="<%= image %>">
                    <img alt="Try Reloading" class="w-50" src="<%= image %>">
                </a>
                <hr>
                <div class="container text-start">

                    <h4 class="gameModalTitleHeading">Name</h4>
                    <p><%= name %></p>


                    <h4 class="gameModalTitleHeading">Played For</h4>
                    <p>78 Hours</p>


                    <h4 class="gameModalTitleHeading">Personal Rating</h4>
                    <p><%= rating %>/5</p>

                    <h4 class="gameModalTitleHeading">Description</h4>
                    <p><%= des %></p>

                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-dark" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>